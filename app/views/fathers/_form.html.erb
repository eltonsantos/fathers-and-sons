<%= simple_form_for @father, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :birth_date %>
  <%= f.input :occupation %>
  <%= f.input :picture, as: :file, input_html: { class: 'form-control' } %>

  <br />
  
  <div class="form-group pull-right">
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), fathers_path, :class => 'btn btn-default' %>
  	<%= f.button :submit, :class => 'btn-primary' %>
  </div>

<% end %>